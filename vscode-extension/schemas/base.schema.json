{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "base.schema.json",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Name of the entity"
    },
    "type": {
      "type": "string",
      "enum": ["application", "module", "library", "component", "service"]
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version number"
    }
  }
}
